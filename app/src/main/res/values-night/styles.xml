<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppToolbarStyle">
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
    </style>
    <style name="AppDrawerToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>
    <style name="AppCardViewStyle">
        <item name="cardBackgroundColor">@color/dark_gray</item>
        <item name="strokeColor">@color/black</item>
    </style>
    <style name="AppNightElementsStyle">
        <item name="android:background">@color/dark_gray</item>
        <item name="tabTextColor">@color/gray</item>
    </style>
    <style
        name="AppTheme.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="hintTextColor">@color/text_input_layout_color</item>
        <item name="cursorColor">@color/gray</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_input_layout_color</item>
    </style>
</resources>