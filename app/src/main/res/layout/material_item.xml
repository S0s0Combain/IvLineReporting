<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/materialItemContainer"
    android:background="@drawable/item_background"
    android:padding="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/deleteMaterialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/baseline_close_24"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/materialEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:hint="Введите материал"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <ImageView
            android:id="@+id/searchMaterialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/baseline_search_24"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="5"
            android:layout_weight="1"
            tools:ignore="RtlCompat"
            android:inputType="number"
            android:hint="Кол."/>
        <TextView
            android:id="@+id/unitMeasurementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/parametersContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>
